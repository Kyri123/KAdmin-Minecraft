<div class="row" id="serverlist">
    <a class="col-12" href="#">
        <div class="border border-info text-info align-content-center justify-content-center align-items-center d-flex card" style="font-size: 75px; width:100%; height:278px; border: 2px solid!important; cursor: pointer">
            <i class="fas fa-sync fa-spin" aria-hidden="true"></i>
        </div>
    </a>
</div>

<div id="modallist"></div>

<% if(userHelper.hasPermissions(user.id, "servercontrolcenter/create")) { %>
    <form class="modal fade" id="addserver" tabindex="-1" method="post" action="#" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document" style="max-width: 700px">
            <div class="modal-content border-0">
                <div class="modal-header bg-success">
                    <h5 class="modal-title"><%- PANEL_LANG.servercontrolcenter.modalCreate.title %></h5>
                </div>
                <div class="modal-body">
                    <div class="form-group row mb-1">
                        <label class="col-sm-4 col-form-label">Game-Port</label>
                        <div class="col-sm-8">
                            <input type="number" name="port[]" class="form-control" value="7777">
                        </div>
                    </div>
                    <div class="form-group row mb-1">
                        <label class="col-sm-4 col-form-label">Query-Port</label>
                        <div class="col-sm-8">
                            <input type="number" name="port[]" class="form-control" value="27015">
                        </div>
                    </div>
                    <div class="form-group row mb-0">
                        <label class="col-sm-4 col-form-label">RCON-Port</label>
                        <div class="col-sm-8">
                            <input type="number" name="port[]" class="form-control" value="20584">
                        </div>
                    </div>
                    <input name="addserver" type="hidden" value="true">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><%- PANEL_LANG.servercontrolcenter.modalCreate.cancel %></button>
                    <button type="button" class="btn btn-success" name="add" onclick="submitform('#addserver')"><%- PANEL_LANG.servercontrolcenter.modalCreate.add %></button>
                </div>
            </div>
        </div>
    </form>
<% } %>

